<h1>Edit restaurant</h1>
<%= simple_form_for [:admin, @restaurant] do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category %>
  <%= f.input :phone_number %>
</div>
<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>

<%= link_to "Back", restaurants_path %>

